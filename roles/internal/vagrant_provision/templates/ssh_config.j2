Host bastion
  Hostname bastion
  User {{ remote_user }}
  IdentityFile ~/.ssh/id_rsa
  PasswordAuthentication no
  ForwardAgent yes
  ServerAliveInterval 60
  TCPKeepAlive yes
  ControlMaster auto
  ControlPath ~/.ssh/ansible-%r@%h:%p
  ControlPersist 15m
  ProxyCommand none
  LogLevel QUIET
  StrictHostKeyChecking no
  CheckHostIP no
Host 10.0.*
  User {{ remote_user }}
  IdentityFile ~/.ssh/id_rsa
  ServerAliveInterval 60
  TCPKeepAlive yes
  ProxyCommand ssh -W %h:%p ubuntu@bastion
  LogLevel QUIET
  StrictHostKeyChecking no
  CheckHostIP no